extends ../layout

block content

    link(rel='stylesheet', href='/stylesheets/Login/registro.css')

    //-let host = "http://localhost:3000"
    -let host = "https://hotelesperroscanahueca.herokuapp.com"

    .form-left
        img(src="../../images/Principal/Logo.png" id="iconoUsuario" width="300px" height="300px")
        label#linkedPost HotelPerruno
        label#descripcion Registrarte solo te toma 1 minuto

    .form-right
    a(href=host)
        img(src="../../images/Login/boton-de-retroceso.png" id="retroceso" width="45px" height="45px")

    .form-right-box
        form(action="/users/add" method="POST")
            label#registroLabel Registro Gratis
            input(type="text" name="fullname" placeholder="Nombre Completo" width="200" height="200" id="fullname" required="fullname")
            input(type="text" name="username" placeholder="Ingrese nombre de usuario" width="200" height="200" id="username" required="username")
            input(type="password" name="password" placeholder="ingrese su contraseÃ±a" width="200" height="200" id="password" required="password")
            input(type="submit" value="Aceptar" id="botonAceptar")
            if(message && message.length > 0)
                p(class="alert alert-danger" id="mensaje_error_login") #{message}




